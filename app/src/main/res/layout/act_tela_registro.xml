<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.vitor.uva_analisador.ActTelaRegistro"
    tools:showIn="@layout/act_tela_registro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <EditText
            android:id="@+id/ednome"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/bt_voltar"
            android:layout_alignBottom="@+id/bt_voltar"
            android:layout_alignEnd="@+id/textView5"
            android:layout_marginEnd="16dp"
            android:ems="10"
            android:hint="Name"
            android:maxLength="50"
            android:inputType="textPersonName"
            android:textSize="25dp"
            android:translationX="85dp"
            android:translationY="20dp" />

            <!--android:hint="Nome"-->

        <EditText
            android:id="@+id/edidade"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ednome"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Age"
            android:maxLength="3"
            android:inputType="numberSigned"
            android:textSize="25dp"
            android:translationX="85dp"
            android:translationY="20dp" />

            <!--android:hint="Idade"-->

        <EditText
            android:id="@+id/edfps"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ednome"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Sunscreen Factor"
            android:maxLength="3"
            android:inputType="numberSigned"
            android:textSize="25dp"
            android:translationX="85dp"
            android:translationY="20dp" />

        <!--android:hint="FPS"-->

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/edidade"
            android:layout_marginTop="8dp"
            android:text="Skin Type:"
            android:textSize="25dp"
            android:translationX="112dp"
            android:translationY="20dp" />

        <!--android:text="Tipo de Pele:"-->

        <!--<Spinner-->
