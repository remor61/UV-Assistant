    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imagemmmmm"
            android:layout_width="131dp"
            android:layout_height="103dp"
            android:layout_marginTop="19dp"
            android:translationX="30dp"
            android:translationY="230dp"
            android:src="@drawable/slrcamera_slr_13389" />

        <Spinner
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/spnTipoPele"
        android:translationX="25dp"
        android:translationY="270dp">
        </Spinner>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkboxpele"
            android:translationX="-25dp"
            android:translationY="300dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tipo_da_pele"
        android:textColor="#56077e"
        android:text=""
