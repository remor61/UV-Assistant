                <TextView
                    android:id="@+id/tv_long"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Welcome to UV – Assistant: Skin Cancer Prevention."
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:textColor="#602060"
                    />

                <!--android:text="Bem-vindo ao UV – Assistant: Analisador de Risco à Radiação Ultravioleta."-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
